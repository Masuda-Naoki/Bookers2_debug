<h2>Books search for "<%= word %>"</h2>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tags</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
        <td><%= link_to book.title, book %></td>
        <td><%= book.body %></td>
      
        <td>
          コメント数:<span id="comments_count"><%= book.book_comments.count %></span>
        </td>
       
      </tr>
    <% end %>
  </tbody>
</table>